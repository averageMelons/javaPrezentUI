<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Separator?>
<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.uav.prezentui.PrezentUIController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <!-- adaugam titlu si text -->
    <Label text="Universitatea de Stiinte Exacte 'Aurel Vlaicu' Arad" style="-fx-font-size: 24.0"/>
    <VBox alignment="CENTER" spacing="2" xmlns:fx="http://javafx.com/fxml">
        <Label text="Interfata grafica pentru trecerea si vizualizarea prezenteleor" wrapText="true"/>
        <Label text="Infortmatica, Anul II (2025 - 2026)" wrapText="true"/>
    </VBox>

    <!-- adaugam separator -->
    <Separator />

    <!-- adaugam butoane ce vor rula functii/metoda cu "onAction" -->
    <Button fx:id="btnIntPrez" text="Introducere Prezenta" onAction="#onHelloButtonClick" />
    <Button fx:id="btnVizPrez" text="Vizualizare Prezente" onAction="#onVizPrezClick"/>
    <Button fx:id="btnVizAdminPrez" text="Vizualizare Prezente (Admin)" onAction="#onVizPrezAdminClick" />
</VBox>
